{{ define "content" }}
<div class="container py-4">

    <h1 class="mb-4">{{ .Title }}</h1>

    <div class="row g-3">
        {{ range .Data.Cards }}
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            {{ template "card" . }}
        </div>
        {{ end }}
    </div>

    {{ template "pageination" .Data.Pagination }}
</div>
{{ end }}